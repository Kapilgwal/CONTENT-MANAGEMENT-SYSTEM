<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | ContentCraft</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">

    <!-- Header section with navigation -->
    <header class="bg-gray-800 sticky top-0 z-50 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-bold text-white">ContentCraft</h1>
            <nav class="space-x-4">
                <a href="/write" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-md text-sm">Write</a>
                <a href="/messages" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-md text-sm">Messages</a>
                <a href="/profile" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-md text-sm">Profile</a>
            </nav>
        </div>
    </header>

    <!-- Welcome section -->
    <section class="container mx-auto p-8 text-center">
        <h2 class="text-4xl font-semibold mb-4">Hello, Welcome to ContentCraft</h2>
        <p class="text-gray-400 text-lg">Explore, read, and share your thoughts with the community.</p>
    </section>

    <!-- Posts section -->
    <section class="container mx-auto p-8">
        <h2 class="text-3xl font-bold mb-6">Recent Posts</h2>
        <div id="posts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% contents.forEach(post => { %>
                <div class="post bg-gray-800 rounded-lg shadow-lg hover:shadow-2xl transition duration-300">
                    <div class="p-4">
                        <h3 class="post-title text-xl font-semibold mb-2"><%= post.title %></h3>
                        <p class="post-content text-gray-300 mb-4">
                            <%= post.content.length > 30 ? post.content.substring(0, 30) + '...' : post.content %>
                        </p>
                        <div class="post-user text-sm text-gray-400">
                            Posted by: <%= post.username ? post.username : 'Unknown' %>
                        </div>
                        <div class="post-likes text-sm text-gray-400 mt-2">
                            Liked by: 
                            <% if (post.likes.length > 0) { %>
                                <%= post.likes.map(user => user.username).join(', ') %>
                            <% } else { %>
                                No likes yet
                            <% } %>
                        </div>
                    </div>
                    <div class="flex justify-between p-4 bg-gray-700 text-blue-400 text-sm">
                        <a href="/read/<%= post._id %>" class="hover:text-blue-300">Read Article </a>
                        <a href="/update/<%= post._id %>" class="hover:text-blue-300">Update</a>
                        <a href="/delete/<%= post._id %>" class="hover:text-blue-300">Delete</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 p-4 mt-10">
        <div class="container mx-auto text-center text-gray-400">
            &copy; 2024 ContentCraft. All rights reserved.
        </div>
    </footer>

</body>

</html>
