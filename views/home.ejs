<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | ContentCraft</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">

    <!-- Header section with navigation -->
    <header class="bg-gray-800 sticky top-0 z-50 p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-extrabold text-white">ContentCraft</h1>
            <nav class="space-x-6">
                <a href="/write" class="bg-blue-600 hover:bg-blue-500 text-white px-5 py-2 rounded-full text-sm transition duration-300">
                    Write</a>
                <a href="/messages" class="bg-blue-600 hover:bg-blue-500 text-white px-5 py-2 rounded-full text-sm transition duration-300">
                    Messages</a>
                <a href="/profile" class="bg-blue-600 hover:bg-blue-500 text-white px-5 py-2 rounded-full text-sm transition duration-300">
                    Profile</a>
            </nav>
        </div>
    </header>

    <!-- Welcome section -->
    <section class="container mx-auto text-center py-16">
        <h2 class="text-5xl font-bold mb-4 text-white">Welcome to ContentCraft</h2>
        <p class="text-gray-400 text-lg max-w-3xl mx-auto">
            Discover and share amazing stories. Craft your content, engage with the community, and inspire others!
        </p>
    </section>

    <!-- Recent Posts section -->
    <section class="container mx-auto p-8">
        <h2 class="text-3xl font-bold mb-8 text-white">Recent Posts</h2>
        <div id="posts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% contents.forEach(post => { %>
                <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition duration-300">
                    <!-- Image placeholder (optional) -->
                    <div class="h-48 bg-gray-700">
                        <img src="https://via.placeholder.com/400" alt="Post image" class="object-cover w-full h-full">
                    </div>
                    <!-- Post Content -->
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-white truncate mb-2">
                            <%= post.title %>
                        </h3>
                        <p class="text-gray-300 text-sm mb-4">
                            <%= post.content.length > 30 ? post.content.substring(0, 30) + '...' : post.content %>
                        </p>
                        <div class="text-sm text-gray-500">
                            Posted by: <%= post.username ? post.username : 'Unknown' %>
                        </div>
                        <div class="text-sm text-gray-400 mt-2">
                            Liked by:
                            <% if (post.likes.length > 0) { %>
                                <%= post.likes.map(user => user.username).join(', ') %>
                            <% } else { %>
                                No likes yet
                            <% } %>
                        </div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="flex justify-between px-6 py-4 bg-gray-700 text-blue-400 text-sm">
                        <a href="/read/<%= post._id %>" class="hover:text-blue-300 transition">Read Article</a>
                        <a href="/like/<%= post._id %>" class="hover:text-blue-300 transition">Like Article</a>
                        <a href="/comment/<%= post._id %>" class="hover:text-blue-300 transition">Comment On Article</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 py-6 mt-16">
        <div class="container mx-auto text-center text-gray-400">
            &copy; 2024 ContentCraft. All rights reserved.
        </div>
    </footer>

</body>

</html>
